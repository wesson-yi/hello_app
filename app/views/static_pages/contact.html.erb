<form role="form">
  <div class="form-group">
    <label for="name">名称</label>
    <input type="text" class="form-control" id="name" placeholder="请输入名称">
  </div>
  <div class="form-group">
    <label for="inputfile">文件输入</label>
    <input type="file" id="inputfile">
    <p class="help-block">这里是块级帮助文本的实例。</p>
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox">请打勾
    </label>
  </div>
  <div class="form-group">
    <label for="text">文本输入</label>
    <textarea class="form-control" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-default">提交</button>
</form>
<hr /><!-- 分割线 -->

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="firstname" class="col-sm-2 control-label">名字</label>
    <div class="col-sm-10">
      <p class="form-control-static">Wesson</p>
      <!--
      <input type="text" class="form-control" id="firstname" placeholder="请输入名字">
      -->
    </div>
  </div>
  <div class="form-group">
    <label for="lastname" class="col-sm-2 control-label">姓</label>
    <div class="col-sm-10">
      <input type="text" class="form-control input-lg" id="lastname" placeholder="请输入姓氏">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">邮箱</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" placeholder="禁止输入邮箱" disabled>
    </div>
  </div>

  <div class="form-group has-success">
    <label class="col-sm-2 control-label" for="inputSuccess">输入成功</label>
    <div class="col-sm-10">
      <input type="text" class="form-control input-sm" id="inputSuccess">
    </div>
  </div>
  <fieldset disabled>
    <div class="form-group has-warning">
      <label class="col-sm-2 control-label" for="inputWarning">输入警告</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputWarning">
      </div>
    </div>
    <div class="form-group has-error">
      <label class="col-sm-2 control-label" for="inputError">输入错误</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="inputError">
      </div>
    </div>
  </fieldset>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <label>
        <input type="checkbox">  请记住我
      </label>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">登录</button>
    </div>
  </div>
</form>

<hr />
